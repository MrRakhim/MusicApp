<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ArtistFragment"
    android:background="#fff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/artist_image"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:maxHeight="600sp"
            android:src="@drawable/ic_account_box_black_24dp"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="-60dp"
            android:text="Ed Sheeran"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#56E1EBED"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="20sp"
            android:text="About"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/artist_about"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_marginTop="20sp"
            android:text="About Ed Sheeran"
            />
        <TextView
            android:id="@+id/artist_birthdate"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:text="birthdate"
            />
        <TextView
            android:id="@+id/artist_genre"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:text="Genre"
            />
        <TextView
            android:id="@+id/artist_website"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="20sp"
            android:layout_marginVertical="20sp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:text="Website"
            />

    </LinearLayout>


</LinearLayout>